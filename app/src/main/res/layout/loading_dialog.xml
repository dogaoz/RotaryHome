<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#F0ECEEED"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loadingRelativeLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true">
<net.frakbot.imageviewex.ImageViewEx
    android:id="@+id/loadingAnimated"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="15dp"

    android:background="#00000000"/>
<t.Thin
    android:id="@+id/loadingText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:shadowColor="#FFFFFF"
    android:shadowDx="2"
    android:shadowDy="1"
    android:shadowRadius="2"
    android:textSize="20sp"
    android:layout_below="@id/loadingAnimated"
    android:paddingBottom="15dp"
    android:text="@string/loading"
    android:textColor="#000000" />
    <!--
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadingText"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
     -->
</RelativeLayout>
