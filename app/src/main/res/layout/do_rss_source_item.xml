<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FFF"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:gravity="center|left"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/add_button_rss"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_button_rss"
        android:layout_toStartOf="@+id/add_button_rss" />
    <at.markushi.ui.CircleButton
        android:id="@+id/add_button_rss"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@drawable/ic_action_add_to_queue"
        app:cb_color="#2196F3"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_button_rss"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
