<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@android:color/holo_blue_dark</item>

        <item name="colorControlNormal">@android:color/black</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000</item>
        <item name="android:background">#F0ECEEED</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="woTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@android:color/black</item>

        <item name="colorControlNormal">@android:color/black</item>
    </style>
    <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#66000000</item>
        <item name="sv_showcaseColor">#FFFFFF</item>
        <item name="sv_buttonText">OK!</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
    </style>
    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="ThemeTranslucentDO" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- the theme applied to the application or activity -->
    <style name="RSSActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
        <item name="android:windowExitAnimation">@anim/fade_out_fast</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#113E66</item>
    </style>
    <style name="WhiteTextShadowBlack">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="NoneTextShadowBlack">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="BlackTextShadowWhite">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
</resources>
